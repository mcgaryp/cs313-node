<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>BookList</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>

   <div class="container">

      <h1>Book List Class Activity</h1>

      <div class="row">
         <!-- Choose a specific book by id -->

         <div class="col">
            <div class="row pt-3">
               <h3>Search by ID</h3>
            </div>
            <div class="row">
               <form action="/week10/class/oneBook">
                  <div class="form-group">
                     <label for="bookId">Choose a Book ID</label>
                     <input name="id" class="form-control" id="bookId">
                  </div>
                  <button class="btn btn-primary" type="submit">Search</button>
               </form>
            </div>
         </div>

         <!-- Search specific book by title -->
         <div class="col">
            <div class="row pt-3">
               <h3>Search by Title</h3>
            </div>
            <div class="row">
               <form action="/week10/class/oneBook">
                  <div class="form-group">
                     <label for="titleSearch">Choose Title</label>
                     <input name="title" class="form-control" id="titleSearch">
                  </div>
                  <button class="btn btn-primary" type="submit">Search</button>
               </form>
            </div>
         </div>

         <!-- add a new book -->
         <div class="col">
            <div class="row pt-3">
               <h3>Add a New Book</h3>
            </div>
            <div class="row">
               <form action="/week10/class/createBook">
                  <div class="form-group">
                     <label for="title">Add a New Book Title</label>
                     <input name="title" class="form-control" id="title">
                  </div>
                  <button class="btn btn-primary" type="submit">Add</button>
               </form>
            </div>
         </div>

      </div>

      <!-- see the whole list -->
      <div class="row pt-3">
         <h3>Check out Your Book list</h3>
         <a class="p-3 btn btn-primary" href="/week10/class/bookList">Book List</a>
      </div>

      <!-- if there are results from your search -->
      <% if (books) { %>
      <div class="row pt-3">
         <h3 class="col">Results</h3>
      </div>
      <div class="row">
         <% for (var i = 0; i < books.length; i++) { %>
         <div class="col">
            <p><%= books[i].title %></p>
         </div>
         <% } %>
      </div>
      <% } %>

   </div>

</body>

</html>