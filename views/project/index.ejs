<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Custom Zum Bug</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
   <div class="container">
      
      <!-- Title -->
      <div class="row">
         <h1>Hello ZUM BUGz!</h1>
      </div>

      <!-- Selectors -->
      <div class="row">
         <a class="btn btn-primary" href="/zumBugz/add">Add</a>
         <a class="btn btn-primary" href="/zumBugz/send">Send</a>
      </div>

      <!-- Select one Row -->
      <div class="row">
         <div class="col">
            <form action="zumbugz/send">
               <label for="selectBug">Select your choice of Bugz</label>
               <select id="selectBug" name="bug" onchange="changed(value)" required>
                  <option value="">Select One</option>
                  <% for (var i = 0; i < bugs.length; i++) { %>
                  <option value="<%= bugs[i].image %>"><%= bugs[i].bug_name %></option>
                  <% } %>
               </select>
            </form>
         </div>
         <div class="col" id="image">
            <img src="images/IMG_7872.jpeg" alt="Something">
         </div>
      </div>
   </div>

   <!-- Scripts -->
   <script>
      function changed(value) {
         document.getElementById('image').innerHTML = "<img src='" + value + "' alt='" + value + "'>"
      } 
   </script>
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"></script>
</body>

</html>